# -----------------------------
# MIME TYPES
# -----------------------------
AddType image/avif            .avif
AddType image/webp            .webp
AddType image/jpeg            .jpg .jpeg
AddType image/png             .png
AddType image/svg+xml         .svg
AddType video/mp4             .mp4
AddType video/webm            .webm
AddType video/quicktime       .mov   # ok, but consider mp4/webm instead

# -----------------------------
# DEFAULT INDEX + NO LISTING
# -----------------------------
DirectoryIndex index.html
Options -Indexes

# -----------------------------
# CACHING (far-future for static)
# -----------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  # Images
  ExpiresByType image/avif      "access plus 1 year"
  ExpiresByType image/webp      "access plus 1 year"
  ExpiresByType image/jpeg      "access plus 1 year"
  ExpiresByType image/png       "access plus 1 year"
  ExpiresByType image/svg+xml   "access plus 1 year"
  # Video
  ExpiresByType video/mp4       "access plus 1 year"
  ExpiresByType video/webm      "access plus 1 year"
  # Static assets
  ExpiresByType text/css        "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/json "access plus 1 month"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  # Strong caching for images/video; bump filenames when you update
  <FilesMatch "\.(avif|webp|jpe?g|png|svg|mp4|webm)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  # Reasonable caching for CSS/JS if not hashed
  <FilesMatch "\.(css|js|json)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
  # Allow fonts and images to load across subdomains/CDN
  <FilesMatch "\.(woff2|avif|webp|svg)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
  # Helpful for performance tools
  Header set Timing-Allow-Origin "*"
</IfModule>

# -----------------------------
# COMPRESSION (text only; images/video are already compressed)
# -----------------------------
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/javascript application/json
</IfModule>

# -----------------------------
# SPA FALLBACK (only if you have client-side routing)
# -----------------------------
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Serve existing files/folders directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  # Otherwise fall back to index.html
  RewriteRule . /index.html [L]
</IfModule>

# -----------------------------
# BYTE-RANGE FOR VIDEO (usually on by default)
# -----------------------------
<IfModule mod_headers.c>
  <FilesMatch "\.(mp4|webm)$">
    Header set Accept-Ranges bytes
  </FilesMatch>
</IfModule>
